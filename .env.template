# Restaurant Food Ordering System Environment Configuration Template
# Copy this file to .env.prod for production or .env.staging for staging

# Database Configuration
MYSQL_ROOT_PASSWORD=your_secure_root_password
MYSQL_USER=restaurant_user
MYSQL_PASSWORD=your_secure_password

MYSQL_PAYMENT_ROOT_PASSWORD=your_secure_payment_root_password
MYSQL_PAYMENT_USER=payment_user
MYSQL_PAYMENT_PASSWORD=your_secure_payment_password

# MongoDB Configuration
MONGO_ROOT_USERNAME=admin
MONGO_ROOT_PASSWORD=your_secure_mongo_password

# Database URLs (for production with external databases)
DATABASE_URL=jdbc:mysql://mysql:3306/restaurant_orders?useSSL=true&requireSSL=true&verifyServerCertificate=false&serverTimezone=UTC
DATABASE_USERNAME=restaurant_user
DATABASE_PASSWORD=your_secure_password

PAYMENT_DATABASE_URL=jdbc:mysql://mysql-payment:3306/restaurant_payments?useSSL=true&requireSSL=true&verifyServerCertificate=false&serverTimezone=UTC
PAYMENT_DATABASE_USERNAME=payment_user
PAYMENT_DATABASE_PASSWORD=your_secure_payment_password

MONGODB_URI=mongodb://admin:your_secure_mongo_password@mongodb:27017/restaurant_app?authSource=admin
MONGODB_DATABASE=restaurant_app

# Kafka Configuration
KAFKA_BOOTSTRAP_SERVERS=kafka:29092

# Redis Configuration (if using external Redis)
REDIS_URL=redis://redis:6379

# Application Configuration
SPRING_PROFILES_ACTIVE=prod

# JVM Configuration
JAVA_OPTS=-Xms512m -Xmx1024m -XX:+UseG1GC

# Logging Configuration
LOG_LEVEL=INFO

# Security Configuration (add your own secure values)
JWT_SECRET=your_jwt_secret_key_here
ENCRYPTION_KEY=your_encryption_key_here

# External Service Configuration
PAYMENT_GATEWAY_URL=https://api.payment-gateway.com
PAYMENT_GATEWAY_API_KEY=your_payment_gateway_api_key

# Monitoring Configuration
METRICS_ENABLED=true
TRACING_ENABLED=true
ZIPKIN_URL=http://zipkin:9411